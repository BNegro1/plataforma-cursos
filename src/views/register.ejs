<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/login">Iniciar Sesi칩n</a></li>
                <li><a href="/register">Registrarse</a></li>
            </ul>
        </nav>
        <h1>Formulario de Registro</h1>
    </header>
    <main>
        <form action="/register" method="POST" class="seccion" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="idRol">Rol:</label>
                <input type="number" id="idRol" name="idRol" required>
            </div>

            <div class="form-group">
                <label for="rutUsuario">RUT:</label>
                <input type="number" id="rutUsuario" name="rutUsuario" required>
            </div>

            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>

            <div class="form-group">
                <label for="apellido">Apellido:</label>
                <input type="text" id="apellido" name="apellido" required>
            </div>

            <div class="form-group">
                <label for="correo">Correo:</label>
                <input type="email" id="correo" name="correo" required>
            </div>

            <div class="form-group">
                <label for="contrasenia">Contrase침a:</label>
                <input type="password" id="contrasenia" name="contrasenia" required>
            </div>

            <div class="form-group">
                <label for="region">Regi칩n:</label>
                <input type="text" id="region" name="region">
            </div>

            <div class="form-group">
                <label for="comuna">Comuna:</label>
                <input type="text" id="comuna" name="comuna">
            </div>

            <button type="submit" class="nav-btn">Registrar</button>
        </form>
    </main>
    <script>
        function validateForm() {
            const rutUsuario = document.getElementById('rutUsuario').value;
            if (isNaN(rutUsuario) || rutUsuario.length < 8) {
                alert('Por favor, ingrese un RUT v치lido.');
                return false;
            }
            return true;
        }
    </script>
</body>

</html>